    @code {
    // Fonction pour générer la grille en C#
    private RenderFragment GenerateGrid(int rows, int columns)
    {
        RenderFragment grid = builder =>
        {
            builder.OpenElement(0, "div");
            builder.AddAttribute(1, "class", "game-grid");

            for (int row = 0; row < rows; row++)
            {
                for (int col = 0; col < columns; col++)
                {
                    builder.OpenElement(2, "div");
                    builder.AddAttribute(3, "class", "grid-cell");
                    builder.CloseElement();
                }
            }

            builder.CloseElement();
        };

        return grid;
    }
